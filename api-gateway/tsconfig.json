{
    "compilerOptions":  {
                            "target":  "ES2021",
                            "module":  "CommonJS",
                            "outDir":  "dist",
                            "strict":  false,
                            "esModuleInterop":  true,
                            "skipLibCheck":  true,
                            "resolveJsonModule":  true,
                            "moduleResolution":  "node"
                        },
    "include":  [
                    "src/**/*"
                ],
    "exclude":  [
                    "node_modules",
                    "dist"
                ]
}

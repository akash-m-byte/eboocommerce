// Prisma schema for pricing-service

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Price {
  id         String   @id @default(uuid())
  productId  String   @unique
  basePrice  Float
  currency   String
  createdAt  DateTime @default(now())
  histories  PriceHistory[]
}

model PriceHistory {
  id        String   @id @default(uuid())
  productId String
  price     Float
  createdAt DateTime @default(now())
}

model Discount {
  id        String   @id @default(uuid())
  productId String
  percent   Float
  startsAt  DateTime
  endsAt    DateTime
}

model Coupon {
  id        String   @id @default(uuid())
  code      String   @unique
  percent   Float
  startsAt  DateTime
  endsAt    DateTime
}

model FlashSale {
  id        String   @id @default(uuid())
  productId String
  price     Float
  startsAt  DateTime
  endsAt    DateTime
}

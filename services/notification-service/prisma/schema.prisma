// Prisma schema for notification-service

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Channel {
  EMAIL
  SMS
}

model Notification {
  id        String   @id @default(uuid())
  userId    String?
  channel   Channel
  message   String
  createdAt DateTime @default(now())
}
